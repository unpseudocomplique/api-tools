generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String       @id @default(uuid())
  name               String
  firstName          String
  email              String       @unique
  password           String
  tokens             Int          @default(0)
  autoRecharge       Boolean      @default(false)
  autoRechargeAmount Int?
  transactions       Transaction[]
  apiKeys            ApiKey[]
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  amount    Int
  status    String
  createdAt DateTime @default(now())
}

model ApiKey {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  key       String   @unique
  name      String
  createdAt DateTime @default(now())
  lastUsed  DateTime?
}